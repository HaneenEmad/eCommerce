<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="15dp"
    android:layout_marginTop="20dp"
    android:layout_margin="15dp"
    android:padding="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"
            android:gravity="center"
            android:id="@+id/seller_item_product_name_tv"
            android:textSize="22sp"
            android:padding="5dp"
            android:layout_marginBottom="5dp"
            android:text="Product Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:textColor="@color/colorPrimaryDark"
            android:id="@+id/seller_item_product_state_tv"
            android:gravity="center"
            android:textSize="22sp"
            android:padding="5dp"
            android:layout_marginTop="5dp"
            android:layout_below="@id/seller_item_product_name_tv"
            android:text="Product Status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/seller_item_iv"
            android:layout_below="@id/seller_item_product_state_tv"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="200dp"/>

        <TextView
            android:textColor="@color/colorPrimaryDark"
            android:id="@+id/seller_item_product_price_tv"
            android:gravity="center"
            android:textSize="22sp"
            android:padding="5dp"
            android:layout_marginTop="5dp"
            android:layout_below="@id/seller_item_iv"
            android:text="Product Price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:textColor="@color/colorPrimaryDark"
            android:id="@+id/seller_item_product_description_tv"
            android:gravity="center"
            android:textSize="22sp"
            android:padding="5dp"
            android:layout_marginTop="5dp"
            android:layout_below="@id/seller_item_product_price_tv"
            android:text="Product Description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>