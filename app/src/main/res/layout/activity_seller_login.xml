<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Sellers.SellerLoginActivity">

    <ImageView
        android:id="@+id/img_login_seller"
        android:scaleType="centerCrop"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:src="@drawable/seller_login"
        />
    <TextView
        android:id="@+id/title_login_seller"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Seller Login Form"
        android:gravity="center"
        android:layout_below="@+id/img_login_seller"
        android:layout_marginTop="50dp"
        android:textStyle="bold"
        android:textSize="24dp"
        android:textColor="@android:color/holo_green_dark"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/seller_login_email"
        android:layout_marginStart="15dp"
        android:layout_marginRight="15dp"
        android:layout_below="@+id/title_login_seller"
        android:hint="Email..."
        android:inputType="textEmailAddress"
        android:textSize="16dp"
        android:layout_marginTop="10dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/seller_login_password"
        android:layout_marginStart="15dp"
        android:layout_marginRight="15dp"
        android:layout_below="@+id/seller_login_email"
        android:hint="password..."
        android:inputType="text"
        android:textSize="16dp"
        android:layout_marginTop="10dp"/>
    <Button
        android:textColor="@android:color/holo_green_dark"
        android:id="@+id/seller_login_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/seller_login_password"
        android:background="@android:color/holo_blue_bright"
        android:text="Login"
        android:textSize="18dp"
        android:textAllCaps="false"/>

</RelativeLayout>