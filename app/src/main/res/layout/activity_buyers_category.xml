<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Buyers.BuyersCategoryActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buyers_logan_Category"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:text="Add New Product"
        android:textSize="26sp"
        />

    <!--marginTop-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buyers_linear1_category_layout"
        android:orientation="horizontal"
        android:layout_below="@+id/buyers_logan_Category"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="100dp"
        >

        <ImageView
            android:id="@+id/buyers_T_shirts"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:src="@drawable/tshirt" />

        <ImageView
            android:id="@+id/buyers_sports_t_shirts"
            android:layout_width="90dp"
            android:layout_height="100dp"
            android:src="@drawable/sports"
            />
        <ImageView
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:id="@+id/buyers_female_dresses"
            android:src="@drawable/dress1"
            />
        <ImageView
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:id="@+id/buyers_sweathers"
            android:src="@drawable/sweather"
            />

    </LinearLayout>

    <!--marginTop-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buyers_linear2_category_layout"
        android:orientation="horizontal"
        android:layout_below="@+id/buyers_linear1_category_layout"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="10dp"
        >

        <ImageView
            android:id="@+id/buyers_glasses"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:src="@drawable/glass" />

        <ImageView
            android:id="@+id/buyers_pursrs_bags_wallets"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:src="@drawable/bagg"
            />
        <ImageView
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:id="@+id/buyers_hats"
            android:src="@drawable/hat1"
            />
        <ImageView
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:id="@+id/buyers_shoes"
            android:src="@drawable/shoes"
            />

    </LinearLayout>

    <!--marginTop-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buyers_linear3_category_layout"
        android:orientation="horizontal"
        android:layout_below="@+id/buyers_linear2_category_layout"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="10dp"
        >

        <ImageView
            android:id="@+id/buyers_headphone_handfree"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/headphone1" />

        <ImageView
            android:id="@+id/buyers_laptop_pc"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:src="@drawable/laptop1"
            />
        <ImageView
            android:layout_width="90dp"
            android:layout_height="100dp"
            android:id="@+id/buyers_watches"
            android:src="@drawable/watche"
            />
        <ImageView
            android:layout_width="90dp"
            android:layout_height="100dp"
            android:id="@+id/buyers_mobilepones"
            android:src="@drawable/mobile1"
            />

    </LinearLayout>


</RelativeLayout>