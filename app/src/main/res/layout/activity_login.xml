<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="@drawable/login"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Buyers.LoginActivity">

    <ImageView
        android:id="@+id/Login_app_logo"
        android:layout_width="180dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"
        android:src="@drawable/logooo1"
        />
    <EditText
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/log_in_phone_number_input"
        android:layout_below="@+id/Login_app_logo"
        android:padding="20dp"
        android:background="@drawable/input_design"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:textColor="@color/colorPrimaryDark"
        android:inputType="phone"
        android:textColorHint="@color/colorPrimaryDark"
        android:textSize="20sp"
        android:hint="Phone Number"
        android:textStyle="bold"
        />

    <EditText
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/log_in_password_input"
        android:layout_below="@+id/log_in_phone_number_input"
        android:padding="20dp"
        android:background="@drawable/input_design"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:textColor="@color/colorPrimaryDark"
        android:inputType="textPassword"
        android:textColorHint="@color/colorPrimaryDark"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:hint="Password"
        />
    <LinearLayout
        android:layout_below="@+id/log_in_password_input"
        android:id="@+id/linear_layout_1"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/remmember_chkbx"
            style="@style/Material.Drawable.CheckBox"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:text="Remember Me"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16sp"
            app:cbd_strokeColor="@color/colorPrimaryDark" />


<!--        <com.rey.material.widget.CheckBox-->
<!--            android:id="@+id/remmember_chkbx"-->
<!--            style="@style/Material.Drawable.CheckBox"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="match_parent"-->
<!--            android:layout_gravity="center_vertical"-->
<!--            android:layout_marginLeft="10dp"-->
<!--            android:text="Remember Me"-->
<!--            android:textColor="@color/colorPrimaryDark"-->
<!--            android:textSize="16sp"-->
<!--            app:cbd_strokeColor="@color/colorPrimaryDark" />-->

    <TextView

        android:layout_marginLeft="80dp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="17sp"
        android:text="Forget Password ?"
        android:id="@+id/forgot_password_link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    </LinearLayout>
    <Button
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="10dp"
        android:layout_below="@+id/linear_layout_1"
        android:id="@+id/login_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:padding="17dp"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="22dp"
        android:background="@drawable/buttons"
        android:text=" Log in "
        />
    <TextView
        android:layout_margin="22sp"
        android:layout_marginLeft="80dp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20sp"
        android:text="I’m an Admin ?"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/login_btn"
        android:id="@+id/admin_panel_link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="23dp"
        />
    <TextView
        android:layout_margin="22sp"
        android:layout_marginLeft="80dp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20sp"
        android:text="I’m not an Admin ?"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/login_btn"
        android:id="@+id/not_admin_panel_link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:visibility="invisible"
        />

</RelativeLayout>