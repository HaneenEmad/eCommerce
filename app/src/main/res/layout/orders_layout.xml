<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:background="@color/colorPrimaryDark"
        android:padding="10dp"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/order_user_name_tv"
            android:text="UserName"
            android:textSize="15sp"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:layout_marginLeft="2dp"
            android:layout_width="160dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/order_phone_number_tv"
            android:text="Phone Number"
            android:textAlignment="viewEnd"
            android:layout_alignParentRight="true"
            android:textSize="15sp"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:layout_marginRight="2dp"
            android:layout_width="160dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/order_total_price_tv"
            android:text="Total Price"
            android:layout_below="@id/order_phone_number_tv"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/order_address_city_tv"
            android:text="Address, City"
            android:layout_below="@id/order_total_price_tv"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/order_date_time_tv"
            android:text="Date Time"
            android:layout_below="@id/order_address_city_tv"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/order_show_all_products_btn"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@android:color/white"
            android:text="Show this order products"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18sp"
            android:layout_below="@id/order_date_time_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

</RelativeLayout>