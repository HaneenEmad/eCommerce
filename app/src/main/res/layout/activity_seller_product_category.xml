<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Sellers.SellerProductCategoryActivity">

    <!--marginTop-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/slogan_Category"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:text="Add New Product"
        android:textSize="26sp"
        />

    <!--marginTop-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linear1_category_layout"
        android:orientation="horizontal"
        android:layout_below="@+id/slogan_Category"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="100dp"
        >

        <ImageView
            android:id="@+id/T_shirts"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:src="@drawable/tshirt" />

        <ImageView
            android:id="@+id/sports_t_shirts"
            android:layout_width="90dp"
            android:layout_height="100dp"
            android:src="@drawable/sports"
            />
        <ImageView
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:id="@+id/female_dresses"
            android:src="@drawable/dress1"
            />
        <ImageView
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:id="@+id/sweathers"
            android:src="@drawable/sweather"
            />

    </LinearLayout>

    <!--marginTop-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linear2_category_layout"
        android:orientation="horizontal"
        android:layout_below="@+id/linear1_category_layout"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="10dp"
        >

        <ImageView
            android:id="@+id/glasses"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:src="@drawable/glass" />

        <ImageView
            android:id="@+id/pursrs_bags_wallets"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:src="@drawable/bagg"
            />
        <ImageView
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:id="@+id/hats"
            android:src="@drawable/hat"
            />
        <ImageView
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:id="@+id/shoes"
            android:src="@drawable/shoes"
            />

    </LinearLayout>

    <!--marginTop-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linear3_category_layout"
        android:orientation="horizontal"
        android:layout_below="@+id/linear2_category_layout"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="10dp"
        >

        <ImageView
            android:id="@+id/headphone_handfree"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/headphone" />

        <ImageView
            android:id="@+id/laptop_pc"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:src="@drawable/laptop2"
            />
        <ImageView
            android:layout_width="90dp"
            android:layout_height="100dp"
            android:id="@+id/watches"
            android:src="@drawable/watche"
            />
        <ImageView
            android:layout_width="90dp"
            android:layout_height="100dp"
            android:id="@+id/mobilepones"
            android:src="@drawable/mobile1"
            />

    </LinearLayout>


</RelativeLayout>