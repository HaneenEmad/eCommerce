<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    android:layout_marginBottom="5dp"
    app:cardElevation="15dp"
    tools:context=".Admin.AdminMaintainProductsActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/product_imageview_maintain"
            android:scaleType="fitXY"
            android:src="@drawable/maintain2"
            android:layout_width="match_parent"
            android:layout_height="200dp"/>
        <EditText
            android:background="@drawable/input_design"
            android:layout_margin="5dp"
            android:textColorHint="@color/colorPrimaryDark"
            android:id="@+id/product_item_product_name_maintain"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="22sp"
            android:padding="5dp"
            android:layout_marginTop="5dp"
            android:layout_below="@id/product_imageview_maintain"
            android:hint="Product Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <EditText

            android:background="@drawable/input_design"
            android:layout_margin="5dp"
            android:textColorHint="@color/colorPrimaryDark"
            android:id="@+id/product_item_product_description_maintain"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="22sp"
            android:padding="5dp"
            android:layout_marginTop="5dp"
            android:layout_below="@id/product_item_product_price_maintain"
            android:hint="Product Description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <EditText

            android:layout_margin="5dp"
            android:background="@drawable/input_design"
            android:textColorHint="@color/colorPrimaryDark"
            android:id="@+id/product_item_product_price_maintain"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="22sp"
            android:padding="12dp"
            android:layout_marginTop="5dp"
            android:layout_below="@id/product_item_product_name_maintain"
            android:hint="Product Price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:background="@color/colorPrimaryDark"
            android:layout_margin="5dp"
            android:textColor="@android:color/white"
            android:id="@+id/aplly_changes_btn"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="22sp"
            android:padding="5dp"
            android:layout_marginTop="5dp"
            android:layout_below="@id/product_item_product_description_maintain"
            android:text="Aplly Changes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />


        <Button
            android:id="@+id/delete_product_btn"
            android:layout_below="@id/aplly_changes_btn"
            android:text="Delete This Product"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:padding="12dp"
            android:layout_margin="30dp"
            android:background="@drawable/buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </RelativeLayout>


</androidx.cardview.widget.CardView>