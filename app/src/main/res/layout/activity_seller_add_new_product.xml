<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Sellers.SellerAddNewProductActivity">

    <ImageView
        android:id="@+id/admin_add_new_product_select_image_iv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:scaleType="fitXY"
        android:src="@drawable/select_product_image"
        android:layout_width="350dp"
        android:layout_height="200dp"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/admin_add_new_product_product_name_etlo"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_below="@id/admin_add_new_product_select_image_iv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/admin_add_new_product_product_name_et"
            android:layout_marginTop="20dp"
            android:inputType="textMultiLine"
            android:hint="Product Name... "
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/admin_add_new_product_product_description_etlo"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_below="@id/admin_add_new_product_product_name_etlo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/admin_add_new_product_product_description_et"
            android:layout_marginTop="6dp"
            android:inputType="textMultiLine"
            android:hint="Product Description... "
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/admin_add_new_product_product_price_etlo"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_below="@id/admin_add_new_product_product_description_etlo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/admin_add_new_product_product_price_et"
            android:layout_marginTop="6dp"
            android:inputType="textMultiLine"
            android:hint="Product Price... "
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textAllCaps="false"
        android:padding="20dp"
        android:id="@+id/admin_add_new_product_add_btn"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:layout_below="@id/admin_add_new_product_product_price_etlo"
        android:background="@drawable/button_design"
        android:text="Add Product"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</RelativeLayout>