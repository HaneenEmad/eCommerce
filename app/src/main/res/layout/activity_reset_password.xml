<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Buyers.ResetPasswordActivity">

    <RelativeLayout
        android:id="@+id/reset_password_rl"
        android:background="@color/colorPrimaryDark"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:id="@+id/reset_password_page_title_tv"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reset Password"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:textSize="20dp"
            android:textAlignment="center"
            />

    </RelativeLayout>

    <EditText
        android:layout_below="@id/reset_password_rl"
        android:layout_margin="15dp"
        android:padding="14dp"
        android:background="@drawable/input_design"
        android:id="@+id/reset_password_find_phone_number_et"
        android:hint="Please write your Phone Number..."
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/reset_password_title_questions_tv"
        android:layout_below="@id/reset_password_find_phone_number_et"
        android:gravity="center"
        android:textSize="26sp"
        android:layout_marginTop="35dp"
        android:text="Answer The Following Security Questions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:layout_below="@id/reset_password_title_questions_tv"
        android:layout_margin="15dp"
        android:padding="14dp"
        android:background="@drawable/input_design"
        android:id="@+id/reset_password_question_1"
        android:hint="Where your parents met, first time?"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:layout_below="@id/reset_password_question_1"
        android:layout_margin="15dp"
        android:padding="14dp"
        android:background="@drawable/input_design"
        android:id="@+id/reset_password_question_2"
        android:hint="What's your Favourite super hero?"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:layout_below="@id/reset_password_question_2"
        android:layout_margin="15dp"
        android:padding="14dp"
        android:background="@drawable/buttons"
        android:id="@+id/reset_password_verify_btn"
        android:text="Verify"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


</RelativeLayout>